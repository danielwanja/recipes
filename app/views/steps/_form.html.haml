= form_for [@user, @recipe, @step] do |f|
  - if @step.errors.any?
    #error_explanation
      %h2= "#{pluralize(@step.errors.count, "error")} prohibited this step from being saved:"
      %ul
        - @step.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :position
    = f.number_field :position, class: "form-control"
  .field
    = f.label :description
    = f.text_area :description, class: "form-control"
  .actions
    = f.submit 'Save'
